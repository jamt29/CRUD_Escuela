<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Escuela</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header >
        
    @if (ViewBag.HideNavBar != true)
        {
             <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" >
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Escuela" asp-action="Index">Escuela</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1" >
                        <li class="nav-item" >
                            <a class="nav-link text-white" asp-area="" asp-controller="Escuela" asp-action="Index" >Info Escuela</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Asignatura" asp-action="Index">Info Asignaturas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Alumno" asp-action="Index">Info Alumnos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Evaluacion" asp-action="Index">Info Evaluaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Curso" asp-action="Index">Info Cursos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        }
       
    </header>
      
  
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.OcultarFooter != true)
    {
        
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebEscuela - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    }


    <script>
        function confirmarBorrado() {
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Esta acción no se puede deshacer',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, borrar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Borrado confirmado',
                        text: 'El dato ha sido borrado exitosamente',
                        icon: 'success'
                    });

                    // Esperar 2 segundos antes de ejecutar la acción
                    setTimeout(function () {
                        document.getElementById('btnBorrar').click();
                    }, 2000);
                }
            });
        }
    </script>
    <script>

        function confirmarCrear() {
            Swal.fire({
                icon: 'success',
                title: 'Bien Hecho!!',
                text: 'Fue agregado con exito'
            })
            setTimeout(function () {
                document.getElementById('btnCrear').click();
            }, 2000);
        }
    </script>  
    
    <script>

        function confirmarEdicion() {
            Swal.fire({
                icon: 'success',
                title: 'Bien Hecho!!',
                text: 'El elemento fue modificado exitosamente'
            })
            setTimeout(function () {
                document.getElementById('btnEditar').click();
            }, 2000);
        }
    </script>

    <script>

        function filtro(){
            var filtro = document.getElementById('txtFiltro').value.toLowerCase();
            var table = document.getElementById('tablaEvaluaciones');
            var rows = document.getElementsByTagName('tr');


            for (var i = 1; i < rows.length; i++ ){
                var row = rows[i];
                var cell = row.getElementsByTagName('td')[i];

                if(cell.innerHTML.toLowerCase().includes(filtro)){
                    row.style.display = '';
                } else{
                    row.style.display = 'none';
                }
            }
        }

    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


 